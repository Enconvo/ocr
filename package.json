{
  "$schema": "https://enconvo.com/schemas/extension.json",
  "name": "tts",
  "version": "1.1.107",
  "description": "Text to Speech",
  "title": "TTS",
  "icon": "icon.png",
  "author": "EnconvoAI",
  "categories": [
    "Text To Speech"
  ],
  "group": "tts",
  "license": "MIT",
  "type": "module",
  "commands": [
    {
      "name": "read_aloud",
      "title": "Read Aloud",
      "description": "Read Aloud With TTS Providers",
      "icon": "icon.png",
      "mode": "no-view",
      "aiPlugin": true,
      "accepts": [
        "text"
      ],
      "parameters": {
        "input_text": {
          "type": "string",
          "description": "The text to be translated"
        },
        "selection_text": {
          "type": "string",
          "description": "The selection text to be translated"
        }
      },
      "preferences": [
        {
          "name": "tts_providers",
          "description": "The TTS provider to use.",
          "type": "extension",
          "required": false,
          "default": "default",
          "title": "TTS Provider"
        }
      ]
    },
    {
      "name": "play_audio_book",
      "title": "Read Aloud EBook",
      "description": "Read Aloud EBook",
      "icon": "icon.png",
      "mode": "no-view",
      "targetCommand": "tts/read_aloud",
      "parameters": {
        "context_files": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Context files"
        }
      },
      "preferences": [
        {
          "name": "tts_providers",
          "description": "The TTS provider to use.",
          "type": "extension",
          "required": false,
          "default": "default",
          "title": "TTS Provider"
        }
      ]
    },
    {
      "name": "edge_tts",
      "title": "Edge Text-to-speech",
      "description": "Read Aloud With Edge TTS",
      "icon": "edge_tts.jpg",
      "mode": "no-view",
      "targetCommand": "tts/read_aloud",
      "aiPlugin": true,
      "parameters": {
        "input_text": {
          "type": "string",
          "description": "The text to be translated"
        },
        "selection_text": {
          "type": "string",
          "description": "The selection text to be translated"
        }
      },
      "preferences": [
        {
          "name": "tts_providers",
          "description": "The TTS provider to use.",
          "type": "extension",
          "required": false,
          "default": "edge_tts_provider",
          "title": "TTS Provider"
        }
      ]
    },
    {
      "name": "mirosoft_tts",
      "title": "Microsoft Azure Text-to-speech",
      "description": "Read Aloud With Microsoft Azure TTS",
      "icon": "azure_icon.png",
      "mode": "no-view",
      "targetCommand": "tts/read_aloud",
      "accepts": [
        "text"
      ],
      "aiPlugin": true,
      "parameters": {
        "input_text": {
          "type": "string",
          "description": "The text to be translated"
        },
        "selection_text": {
          "type": "string",
          "description": "The selection text to be translated"
        }
      },
      "preferences": [
        {
          "name": "tts_providers",
          "description": "The TTS provider to use.",
          "type": "extension",
          "required": false,
          "default": "mirosoft_tts_provider",
          "title": "TTS Provider"
        }
      ]
    },
    {
      "name": "openai",
      "title": "OpenAI Text-to-speech",
      "description": "Read Aloud With OpenAI TTS",
      "icon": "openai.png",
      "mode": "no-view",
      "aiPlugin": true,
      "targetCommand": "tts/read_aloud",
      "accepts": [
        "text"
      ],
      "params": [
        {
          "name": "text",
          "description": "The text to be converted to speech",
          "type": "string",
          "required": true,
          "default": ""
        }
      ],
      "preferences": [
        {
          "name": "tts_providers",
          "description": "The TTS provider to use.",
          "type": "extension",
          "required": false,
          "default": "openai_tts_provider",
          "title": "TTS Provider"
        }
      ]
    },
    {
      "name": "elevenlabs_tts",
      "title": "ElevenLabs Text-to-speech",
      "description": "Read Aloud With ElevenLabs TTS",
      "icon": "elevenlabs.png",
      "mode": "no-view",
      "aiPlugin": true,
      "targetCommand": "tts/read_aloud",
      "accepts": [
        "text"
      ],
      "params": [
        {
          "name": "text",
          "description": "The text to be converted to speech",
          "type": "string",
          "required": true,
          "default": ""
        }
      ],
      "preferences": [
        {
          "name": "tts_providers",
          "description": "The TTS provider to use.",
          "type": "extension",
          "required": false,
          "default": "elevenlabs_tts_provider",
          "title": "TTS Provider"
        }
      ]
    }
  ],
  "dependencies": {
    "@enconvo/api": "^0.1.138",
    "axios": "^1.6.8",
    "node-edge-tts": "^1.2.2",
    "openai": "^4.33.1"
  },
  "devDependencies": {
    "@types/node": "^18.19.31",
    "eslint": "^8.57.0",
    "prettier": "^2.8.8",
    "tsup": "^7.2.0",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "lint": "eslint src",
    "lint:fix": "npm run lint --fix",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier --list-different \"**/*.ts\"",
    "build": "enconvo",
    "dev": "enconvo --dev"
  },
  "minAppVersion": "1.8.8"
}
