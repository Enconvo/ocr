{
  "$schema": "https://enconvo.com/schemas/extension.json",
  "name": "ocr_action",
  "version": "0.0.72",
  "description": "OCR Extension",
  "title": "OCR",
  "icon": "icon.png",
  "author": "EnconvoAI",
  "categories": [
    "OCR"
  ],
  "group": "ocr",
  "license": "MIT",
  "type": "module",
  "commands": [
    {
      "name": "ocr",
      "title": "OCR",
      "description": "Convert image to text",
      "icon": "icon.png",
      "mode": "no-view",
      "parameters": {
        "type": "object",
        "properties": {
          "context_files": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Context files"
          },
          "image_files": {
            "type": "array",
            "items": {
              "type": "string",
              "description": "Image file paths for OCR, supports file:// protocol"
            },
            "description": "Image files for OCR"
          }
        }
      },
      "preferences": [
        {
          "name": "ocr_providers",
          "description": "The OCR provider to use.",
          "type": "extension",
          "required": false,
          "default": "default",
          "title": "OCR Provider"
        }
      ]
    },
    {
      "name": "silent_screenshot_ocr",
      "title": "Silent Screenshot OCR",
      "description": "Select the screen area for OCR and copy the OCR results to the clipboard.",
      "icon": "icon.png",
      "mode": "no-view",
      "runInBackground": true,
      "parameters": {
        "type": "object",
        "properties": {}
      },
      "preferences": [
        {
          "name": "ocr_providers",
          "description": "The OCR provider to use.",
          "type": "extension",
          "required": false,
          "default": "default",
          "title": "OCR Provider"
        },
        {
          "name": "hotkey",
          "description": "The hotkey used to trigger the command",
          "type": "hotkey",
          "required": false,
          "default": "Option+S",
          "title": "Hotkey"
        }
      ]
    },
    {
      "name": "screenshot_ocr",
      "title": "Screenshot OCR",
      "description": "Select the screen area for OCR and show the OCR results in a smartbar window.",
      "icon": "icon.png",
      "mode": "no-view",
      "runInBackground": true,
      "parameters": {
        "type": "object",
        "properties": {}
      },
      "preferences": [
        {
          "name": "ocr_providers",
          "description": "The OCR provider to use.",
          "type": "extension",
          "required": false,
          "default": "default",
          "title": "OCR Provider"
        }
      ]
    },
    {
      "name": "screenshot_action",
      "title": "Screenshot Action",
      "description": "Select the screen area for OCR and translate the OCR results",
      "icon": "icon.png",
      "mode": "no-view",
      "runInBackground": true,
      "commandType": "function",
      "parameters": {
        "type": "object",
        "properties": {}
      },
      "preferences": [
        {
          "name": "copy_to_clipboard",
          "description": "Whether to copy the translated results to the clipboard.",
          "type": "checkbox",
          "required": false,
          "default": true,
          "title": "Copy to Clipboard"
        },
        {
          "name": "show_result_in_smartbar",
          "description": "Whether to show the translated results in a smartbar window.",
          "type": "checkbox",
          "required": false,
          "default": true,
          "title": "Show Result in Smartbar"
        },
        {
          "name": "need_ocr",
          "description": "Whether to perform OCR before translation.",
          "type": "checkbox",
          "required": false,
          "default": true,
          "title": "Need OCR"
        },
        {
          "name": "ocr_providers",
          "description": "The OCR provider to use.",
          "type": "extension",
          "required": false,
          "default": "default",
          "title": "OCR Provider"
        },
        {
          "name": "post_command",
          "type": "command",
          "title": "Post Command",
          "default": "",
          "description": "The default command on the SmartBar. You can change it to any command you want.",
          "filter": {
            "recommend_extensions": [
              {
                "name": "writing_package",
                "expand": true
              }
            ]
          }
        }
      ]
    },
    {
      "name": "screenshot_translate",
      "title": "Screenshot Translate",
      "description": "Select the screen area for OCR and translate the OCR results",
      "targetCommand": "ocr_action|screenshot_action",
      "icon": "icon.png",
      "mode": "no-view",
      "runInBackground": true,
      "parameters": {
        "type": "object",
        "properties": {}
      },
      "preferences": [
        {
          "name": "post_command",
          "type": "command",
          "title": "Post Command",
          "default": "translate|translate",
          "description": "The default command on the SmartBar. You can change it to any command you want.",
          "filter": {
            "recommend_extensions": [
              {
                "name": "translate",
                "expand": false
              },
              {
                "name": "writing_package",
                "expand": true
              }
            ]
          }
        }
      ]
    }
  ],
  "dependencies": {
    "@enconvo/api": "link:/Users/ysnows/Documents/Project/enconvo.nodejs/enconvo_api",
    "mp3-concat": "^0.1.2"
  },
  "devDependencies": {
    "@types/node": "^18.19.31",
    "eslint": "^8.57.0",
    "prettier": "^2.8.8",
    "tsup": "^7.2.0",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "lint": "eslint src",
    "lint:fix": "npm run lint --fix",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier --list-different \"**/*.ts\"",
    "build": "enconvo",
    "dev": "enconvo --dev"
  },
  "minAppVersion": "1.8.8"
}